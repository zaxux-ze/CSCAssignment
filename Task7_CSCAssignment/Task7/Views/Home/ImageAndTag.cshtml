<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="row">
        <div class="col-lg-4">
            <form id="dataForm">
                <h3>Upload Image</h3>
                <div class="form-group">
                    <label>Upload your Image</label>
                    <input class="form-control" type="file" id="fileInput" />
                    <img id="showImg"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" id="uploadImageBtn">Upload</button>
                </div>
            </form>
        </div>
        <div class="col-lg-4">

        </div>
    </div>
</body>
</html>

@section Scripts
{
    
    <script>
        $(document).ready(function () {

            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#showImg').attr('src', e.target.result);
                    }

                    reader.readAsDataURL(input.files[0]); 
                }
            }

            $("#fileInput").change(function () {
                readURL(this);
            });

            $('#uploadImageBtn').on('click', function (e) {
                e.preventDefault(); 

                let fileInput = document.getElementById("fileInput").files[0];

                var formToPost = new FormData();
                formToPost.append("fileUpload", fileInput);

                $.ajax({
                    type: 'POST',
                    url: '/api/v1/performImageRecognition',
                    processData: false,
                    contentType: false,
                    data: formToPost
                }).done(function (data) {
                    console.log(data);
                })
            }) 

        })

    </script>

}
